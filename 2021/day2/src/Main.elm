calculateCourseWithAim : List ( String, Maybe Int ) -> ( Int, Int, Int )
calculateCourseWithAim decodedList =
    decodedList
        |> List.foldl
            -- (depth, horizontal, aim)
            (\x a ->
                let
                    ( depth, horizontal, aim ) =
                        a
                in
                case x of
                    ( "forward", Just y ) ->
                        ( depth + (aim * y), horizontal + y, aim )

                    ( "down", Just y ) ->
                        ( depth, horizontal, aim + y )

                    ( "up", Just y ) ->
                        ( depth, horizontal, aim - y )

                    _ ->
                        ( depth, horizontal, aim )
            )
            ( 0, 0, 0 )


multiplyCourseWithAim : ( Int, Int, Int ) -> Int
multiplyCourseWithAim ( depth, horizontal, aim ) =
    depth * horizontal



-- calculateCourse : List ( String, Maybe Int ) -> List ( number, number )


calculateCourse decodedList =
    decodedList
        |> List.map
            (\y ->
                case y of
                    ( "forward", Just x ) ->
                        ( x, 0 )

                    ( "down", Just x ) ->
                        ( 0, x )

                    ( "up", Just x ) ->
                        ( 0, -x )

                    _ ->
                        ( 0, 0 )
            )


multiplyCourse : List ( Int, Int ) -> Int
multiplyCourse calculatedCourse =
    (List.map
        (\( x, _ ) ->
            x
        )
        calculatedCourse
        |> List.sum
    )
        * (List.map
            (\( _, y ) ->
                y
            )
            calculatedCourse
            |> List.sum
          )


