decodeCommands : String -> List ( String, Maybe Int )
decodeCommands puzzleInput =
    puzzleInput
        |> String.split "\n"
        |> List.map
            (\x ->
                let
                    splitted =
                        String.split " " x
                in
                case splitted of
                    [ a, b ] ->
                        Just ( a, String.toInt b )

                    _ ->
                        Nothing
            )
        |> List.filterMap identity


